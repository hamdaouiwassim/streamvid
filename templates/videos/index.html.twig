{% extends 'base.html.twig' %}

{% block title %}Hello VideosController!{% endblock %}

{% block body %}

                {% for v in videos %}
                    <img src="{{ asset('uploads/covers/') }}{{ v.cover }} " >
                    <video width="320" height="240" controls>
                        <source src="{{ asset('uploads/videos/') }}{{ v.content }}" type="video/mp4">
                        
                        Your browser does not support the video tag.
                    </video>
                    <a href="{{ asset('uploads/videos/') }}{{ v.content }}">Telecharger</a>
                {% endfor %}
{% endblock %}
